# Autonomous Web Framework Configuration
# Copy this file to .env and update with your actual values

# AI Provider Configuration
FRAMEWORK_AI_PROVIDER=openai
# Choose: openai, anthropic, or local

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
# Get your API key from: https://platform.openai.com/api-keys

# Anthropic Configuration (alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Get your API key from: https://console.anthropic.com/

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://username:password@localhost:5432/framework_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=autonomous_framework
DB_USER=postgres
DB_PASSWORD=password

# MongoDB Configuration (alternative)
# DATABASE_TYPE=mongodb
# DATABASE_URL=mongodb://localhost:27017/autonomous_framework

# SQLite Configuration (for development)
# DATABASE_TYPE=sqlite
# DATABASE_URL=./data/autonomous_framework.db

# Framework Configuration
FRAMEWORK_WORKSPACE_DIR=./workspace
FRAMEWORK_LOG_LEVEL=info
NODE_ENV=development

# Dashboard Configuration
DASHBOARD_PORT=3100
DASHBOARD_HOST=localhost

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@autonomous-framework.com

# Monitoring & Analytics
ENABLE_ANALYTICS=true
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# Alert Webhooks (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Deployment Configuration
DEPLOYMENT_PROVIDER=docker
AUTO_DEPLOY_STAGING=true
AUTO_DEPLOY_PRODUCTION=false

# Security Configuration
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,json

# Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_CACHING=true
CACHE_TTL=300

# Testing Configuration
RUN_TESTS_ON_BUILD=true
AUTO_FIX_TESTS=true
E2E_TESTING=true
PERFORMANCE_TESTING=false

# Development Configuration
HOT_RELOAD=true
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# FRAMEWORK_LOG_LEVEL=warn
# DEBUG_MODE=false
# AUTO_DEPLOY_PRODUCTION=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_SELF_HEALING=true
ENABLE_AUTO_SCALING=true
ENABLE_VISUAL_REGRESSION_TESTING=false
ENABLE_AI_CODE_REVIEW=true